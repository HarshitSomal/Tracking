<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33CCFF"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context="com.example.trackingproject.Updateform"
    tools:ignore="MergeRootFrame" >

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Update"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#333399"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/usern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/name"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="38dp"
        android:text="Name"
        android:textColor="#333399"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/usern"
        android:layout_below="@+id/usern"
        android:layout_marginTop="16dp"
        android:text="Mobile No."
        android:textColor="#333399"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="23dp"
        android:text="Email Id"
        android:textColor="#333399"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="17dp"
        android:text="Password"
        android:textColor="#333399"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="18dp"
        android:text="Confirm Passowrd"
        android:textColor="#333399"
        android:textStyle="bold" />

    <Button
        android:id="@+id/canc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/sub"
        android:layout_marginTop="18dp"
        android:background="#0066FF"
        android:onClick="cancel"
        android:text="Cancel"
        android:textColor="#333399"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etxtmobno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/usern"
        android:layout_alignLeft="@+id/add"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        android:textColor="#0033CC"
        android:textStyle="italic" >

       
    </EditText>

    <EditText
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/textView6"
        android:ems="10"
        android:hint="Enter Mobile No."
        android:inputType="phone"
        android:textColor="#0033CC"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_alignLeft="@+id/add"
        android:ems="10"
        android:hint="Enter Email id"
        android:inputType="textEmailAddress"
        android:textColor="#0033CC"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/editText3"
        android:ems="10"
        android:hint="Enter password"
        android:inputType="textPassword"
        android:textColor="#0033CC"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/editText4"
        android:ems="10"
        android:hint="Enter Conf pwd"
        android:inputType="textPassword"
        android:textColor="#0033CC"
        android:textStyle="italic" />

    <Button
        android:id="@+id/sub"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/editText5"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="17dp"
        android:background="#0066FF"
        android:onClick="update"
        android:text="Update"
        android:textColor="#333399"
        android:textSize="20dp"
        android:textStyle="bold" />
    
</RelativeLayout>
