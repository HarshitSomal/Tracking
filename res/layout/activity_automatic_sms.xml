<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33CCFF"
    tools:context="com.example.trackingproject.AutomaticSMS"
    tools:ignore="MergeRootFrame" >

 <EditText
        android:id="@+id/editText1"
        android:layout_width="182dp"
        android:textColor="#333399"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone" >

        
    </EditText>

    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="70dp"
        android:onClick="sendBtn"
        android:background="#0066FF"
        android:textColor="#333399"
        android:textStyle="bold"
        android:text="Send" />

         <Button
             android:id="@+id/sear"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:layout_toRightOf="@+id/editText1"
             android:onClick="searchBtn"
             android:background="#0066FF"
             android:textColor="#333399"
             android:textStyle="bold"
             android:text="Search" />

         <TextView
             android:id="@+id/datew"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_below="@+id/time"
             android:layout_marginLeft="20dp"
             android:layout_marginTop="38dp"
             android:textColor="#333399"
             android:textSize="15dp"
             android:textStyle="bold" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="127dp"
        android:gravity="center_horizontal|center"
        android:background="#0066FF"
        android:textColor="#333399"
        android:textStyle="bold"
        android:text="UserAddress"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/send"
        android:layout_alignBottom="@+id/send"
        android:layout_alignLeft="@+id/sear"
        android:background="#0066FF"
        android:textColor="#333399"
        android:onClick="stop"
        android:textStyle="bold"
        android:text="Stop" />

    
 

   
</RelativeLayout>